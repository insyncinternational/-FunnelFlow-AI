# SaaS Funnel Builder - Environment Variables Example
# Copy this file to .env and fill in your values

# ===========================================
# BACKEND CONFIGURATION
# ===========================================

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=saas_funnel_db
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# Password Reset
PASSWORD_RESET_EXPIRES=3600000
EMAIL_VERIFICATION_EXPIRES=86400000

# ===========================================
# EXTERNAL SERVICES
# ===========================================

# HeyGen API
HEYGEN_API_KEY=your-heygen-api-key
HEYGEN_BASE_URL=https://api.heygen.com/v1

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
STRIPE_PRICE_ID_PRO=price_your-pro-price-id
STRIPE_PRICE_ID_ENTERPRISE=price_your-enterprise-price-id

# Google Services
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_SHEET_ID=your-google-sheet-id
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# ===========================================
# EMAIL CONFIGURATION
# ===========================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Templates
EMAIL_FROM=noreply@saasfunnel.com
EMAIL_FROM_NAME=SaaS Funnel Builder

# ===========================================
# FILE STORAGE
# ===========================================

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=saas-funnel-uploads

# Cloudinary (for image/video processing)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================

# Frontend URL
FRONTEND_URL=http://localhost:3000
FRONTEND_DOMAIN=localhost:3000

# API Configuration
API_BASE_URL=http://localhost:5000/api
API_TIMEOUT=30000

# ===========================================
# ANALYTICS & MONITORING
# ===========================================

# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ===========================================
# RATE LIMITING
# ===========================================

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# ===========================================
# CORS CONFIGURATION
# ===========================================

# Allowed Origins
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_CREDENTIALS=true

# ===========================================
# SECURITY HEADERS
# ===========================================

# Helmet Configuration
HELMET_CONTENT_SECURITY_POLICY=true
HELMET_HSTS_MAX_AGE=31536000

# ===========================================
# DEVELOPMENT
# ===========================================

# Debug Mode
DEBUG=saas-funnel:*
DEBUG_LEVEL=verbose

# Hot Reload
HOT_RELOAD=true
WATCH_FILES=true

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================

# Production Settings (uncomment for production)
# NODE_ENV=production
# DB_SSL=true
# REDIS_PASSWORD=your-redis-password
# JWT_SECRET=your-production-jwt-secret
# STRIPE_SECRET_KEY=sk_live_your-live-stripe-key
# FRONTEND_URL=https://yourdomain.com
# API_BASE_URL=https://api.yourdomain.com
